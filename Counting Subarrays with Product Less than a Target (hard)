#include <iostream>
#include <vector>
using namespace std;

class Solution {
public:
    int findSubarrays(vector<int>& nums, int target) {
        if(target <= 1) return 0;
        int totalCount = 0;

        int left = 0;
        double product = 1;
        for(int right = 0; right < nums.size(); right++){
            int digit = nums[right];

            product *= nums[right];

            while(product >= target && left < nums.size()){
                product /= nums[left++];
            }
            totalCount += right - left + 1;
        }

        return totalCount;
    }
};

